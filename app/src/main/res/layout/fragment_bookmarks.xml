<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".features.bookmarks.BookmarksFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_top_news_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/no_bookmark_news_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/no_bookmarks_tv"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/bookmarks"
        android:src="@drawable/ic_news_light_green"
        app:layout_constraintBottom_toTopOf="@+id/no_bookmarks_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/no_bookmarks_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:text="@string/no_bookmarks"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_top_news_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_top_news_rv"
        app:layout_constraintVertical_bias="0.56"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>